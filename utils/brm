# -*- coding: utf-8 -*-

import os
from dotenv import load_dotenv
import telebot

# =============================
# .env laden
# ============================
load_dotenv()

BOT_TOKEN = os.getenv("BOT_TOKEN")
WALLET_ADDRESS = os.getenv("ETH_WALLET") # ETH-Wallet als Zahlungsmittel verwenden

wenn nicht BOT_TOKEN oder nicht WALLET_ADDRESS:
print("‚ùå BOT_TOKEN oder WALLET_ADDRESS nicht geladen. √úberpr√ºfe deine .env-Datei.")
exit()

